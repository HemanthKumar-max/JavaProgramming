<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ServletCrudProject</display-name>
  
  <context-param>
    <param-name>DBUSER</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>DBPWD</param-name>
    <param-value>hemanth123</param-value>
  </context-param>
  <context-param>
    <param-name>DBURL</param-name>
    <param-value>jdbc:mysql://localhost:3306/User</param-value>
  </context-param>
  

  
  
  
  <servlet>
 <servlet-name>f1</servlet-name>
  <servlet-class>com.bz.usermanagement.controller.Registration</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>f1</servlet-name>
  <url-pattern>/ServletRegistration</url-pattern>
  </servlet-mapping>
  
 
  
  <servlet>
 <servlet-name>f2</servlet-name>
  <servlet-class>com.bz.usermanagement.controller.Login</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>f2</servlet-name>
  <url-pattern>/ServletLogin</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
 <servlet-name>f3</servlet-name>
  <servlet-class>com.bz.usermanagement.controller.Logout</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>f3</servlet-name>
  <url-pattern>/ServletLogout</url-pattern>
  </servlet-mapping>

	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>com.bz.usermanagement.filter.MyFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>Process.html</welcome-file>
    <welcome-file>Registration.html</welcome-file>
    <welcome-file>Login.jsp</welcome-file>
    <welcome-file>View.jsp</welcome-file>
  </welcome-file-list>
  
 
   <listener>
    <listener-class>com.bz.usermanagement.filter.AppContextListener</listener-class>
  </listener>
  
  
  
  
  
</web-app>